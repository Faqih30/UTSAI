import random
import math

# DATA KOTA
cities = {
    'Subang': (0, 0),
    'Karawang': (1, 5),
    'Purwakarta': (5, 2),
    'Bekasi': (6, 6),
    'Jakarta': (8, 3)
}

# Menghitung jarak euclidean
def distance(a, b):
    (x1, y1), (x2, y2) = cities[a], cities[b]
    return math.sqrt((x1-x2)**2 + (y1-y2)**2)

# Total jarak rute (pulang ke asal)
def total_distance(route):
    dist = sum(distance(route[i], route[i+1]) for i in range(len(route)-1))
    dist += distance(route[-1], route[0])
    return dist

# Membuat populasi awal
def create_population(pop_size):
    city_list = list(cities.keys())
    return [random.sample(city_list, len(city_list)) for _ in range(pop_size)]

# fitness = kebalikan jarak
def fitness(route):
    return 1 / total_distance(route)

# selection: Mengambil N terbaik
def selection(pop, k=5):
    return sorted(pop, key=lambda r: total_distance(r))[:k]

# crossover: Melakukan order crossover
def crossover(parent1, parent2):
    start, end = sorted(random.sample(range(len(parent1)), 2))
    child = [''] * len(parent1)
    child[start:end] = parent1[start:end]

    p2_index = 0
    for i in range(len(parent2)):
        if parent2[i] not in child:
            while child[p2_index] != '':
                p2_index += 1
            child[p2_index] = parent2[i]
    return child

# mutation: menukar dua kota random
def mutate(route):
    a, b = sorted(random.sample(range(len(route)), 2))
    route[a], route[b] = route[b], route[a]
    return route

# Genetic Algorithm
def GA(pop_size=200, generations=2000):
    pop = create_population(pop_size)

    for gen in range(generations):
        parents = selection(pop, 10)
        children = []

        # crossover
        for i in range(len(parents)):
            for j in range(i+1, len(parents)):
                child = crossover(parents[i], parents[j])
                if random.random() < 0.2:
                    mutate(child)
                children.append(child)

        pop = parents + children

    best = min(pop, key=lambda r: total_distance(r))
    return best, total_distance(best)

best_route, best_dist = GA()
print("Rute Terbaik:", best_route)
print("Total Jarak:", best_dist)
